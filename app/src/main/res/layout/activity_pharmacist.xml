<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pranalspk.saarthi.PharmacistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="20dp"
        android:text="MEDICINE1: "
        android:textSize="20dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/Med1Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="20dp"
            android:text="AMOUNT: "
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/amnt1Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="20dp"
            android:text="MEDICINE2: "
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/Med2Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="20dp"
            android:text="AMOUNT: "
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/amnt2Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View android:layout_height="3dp"
            android:id="@+id/patti"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_alignTop="@+id/buttonSignUp"
            ></View>
        <Button

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/BuyBtn"
            android:text="SEND THE LIST"
            android:background="@android:color/darker_gray"
            android:layout_alignParentBottom="true"
            android:onClick="BuyBtnClick"
            />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
